.graph__name {
  fill: $text-color;
  font-weight: 700;
  font-size: 18px;
  position: absolute;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  @include tablets {
    font-size: 16px;
    top: 42%;
  }
}



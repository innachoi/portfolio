mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin nav(className, items, activeItem)
  nav(class=`nav ` + `${className}`)
    .nav__container
      ul.nav__list
        each item, index in items
          li(class=`nav__item ` + ( (index === activeItem) ? `nav__item--active` : '' ) )
            a.nav__link(href='#')= item

mixin socials
  ul.socials__list
    each social in ['insta', 'vk', 'github']
      li.socials__item
        a(class=`socials__link socials__link--${social}` href='#')
          +icon(`${social}`, `socials__icon socials__icon--${social}`)

mixin skillsGraphs(area, skills, skillList)
  ul(class=`skills__list ${area}__list`)
    -for (i=0; i < skills.length; i++)
      li(class=`skills__item ${area}__item`)
        svg(class=`${area}__item-graph graph` viewBox="0 0 100 100" preserveAspectRatio="none")
          linearGradient(id="circle")
            stop(offset="0%" stop-color="#d0731b")
            stop(offset="100%" stop-color="#dc9322")
          circle(cx="50" cy="50" r="40" class="graph__circle--position--under")
          circle(cx="50" cy="50" r="40" stroke="url(#circle)" class=`graph__circle--position--above graph__circle--position--above--${skills[i]}`)
        div(class=`graph__name graph__name--${skills[i]}`)= skillList[i]

mixin sliderPreview(slides)
  ul.slider__preview-list
    -for (i=0; i < slides.length; i++)
      li(class=`slider__preview-item slider__preview-item--${slides[i]}`)
        +image(`content/portfolio_pr${slides[i]}.jpg`, 'slider__preview-pic')

mixin projectTags(projectName, tags)
  ul(class=`tags__list ${projectName}__tags`)
    each tag in tags
      li.tags__item
        .tags__item-name= tag


.scroll__nav {
  display: flex;
  justify-content: center;
  color: white;

  @include tablets {
    display: none;
  }

  &:hover {
    .scroll__nav-text {
      color: #c58523;
      transition: .3s;
    }

    .scroll__nav-icon {
      fill: #c58523;
      transition: .3s;
    }
  }
}


.scroll__nav-text {
  margin-right: 22px;
}

.scroll__nav-icon {
  width: 28px;
  height: 30px;
  fill: white;
}

.graph {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160px;
  height: 160px;

  @include desktop {
    height: 180px;
    width: 180px;
  }

  @include tablets {
    height: 140px;
    width: 140px;
  }
}

.graph__circle--position--under {
  fill: transparent;
  stroke: #393939;
  stroke-width: 2px;
}

.graph__circle--position--above {
  stroke-width: 6px;
  stroke-dasharray: 251;
  stroke-dashoffset: 44;
  transform-origin: center;
  fill: transparent;
  transform: rotate(180deg)
}


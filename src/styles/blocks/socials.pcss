.socials__list {
  display: flex;
  justify-content: space-between;
}

.socials__item {
  width: 31px;
  height: 25px;
  margin-right: 40px;

  &:last-child {
    margin-right: 0;
  }
}


.socials__link:hover .socials__icon {
  fill: #ff9a00;
  transition: fill .3s;
}

.socials__icon {
  fill: rgba(255, 255, 255, 0.5);
}